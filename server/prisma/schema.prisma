generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Discipline {
  id       String    @id @default(uuid())
  name     String
  students Student[]
  courses  Course[]
}

model Student {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  disciplineId String
  discipline   Discipline   @relation(fields: [disciplineId], references: [id])
  enrollments  Enrollment[]
}

model Course {
  id           String       @id @default(uuid())
  name         String
  capacity     Int
  disciplineId String
  discipline   Discipline   @relation(fields: [disciplineId], references: [id])
  enrollments  Enrollment[]
}

model Enrollment {
  id        String   @id @default(uuid())
  status    String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
}
